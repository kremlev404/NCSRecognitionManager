<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.kremlev.ncsrecognitonmanager">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_ncs_face_descriptor"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_ncs_face_descriptor"
        android:supportsRtl="true"
        android:theme="@style/Theme.NCSRecognitonManager">

        <activity
            android:name=".auth.activity.ManagerAuthActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".manager.acitivity.ManagerActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">

        </activity>
    </application>

</manifest>