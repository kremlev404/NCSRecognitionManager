<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/dialog_reset">


    <EditText
        android:layout_marginTop="16dp"
        android:hint="ENTER EMAIL TO RECEIVE RESET LINK"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textEmailAddress"
        android:id="@+id/dialog_reset_password_et"
        android:backgroundTint="@color/ncs_200"
        android:textColorHint="@color/white"
        android:autoSizeTextType="uniform"
        android:layout_marginHorizontal="24dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:textColor="@color/red"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/background_stroke_red"
            android:text="CANCEL"
            android:id="@+id/dialog_reset_password_btn_cancel"
            >
        </TextView>

        <TextView
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:background="@drawable/background_stroke"
            android:text="RESET"
            android:id="@+id/dialog_reset_password_btn_reset"
            >

        </TextView>
    </RelativeLayout>
</LinearLayout>